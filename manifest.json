{
  "manifest_version": 2,
  "name": "Chinese Text Segmenter",
  "version": "1.0.0",
  "description": "Segment and translate Chinese text for learners",
  
  "permissions": [
    "activeTab",
    "storage",
    "http://localhost:8080/*"
  ],
  
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "48": "icons/icon-48.png"
    }
  },
  
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ]
}